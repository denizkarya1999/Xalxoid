<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_secondary"
    android:maxWidth="477dp"
    android:maxHeight="107dp"
    android:minWidth="477dp"
    android:minHeight="107dp">

    <TextView
        android:id="@+id/ResultScreen"
        android:layout_width="458dp"
        android:layout_height="60dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:maxLength="100"
        android:text="ResultScreen"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FirstNumber" />

    <TextView
        android:id="@+id/FirstNumber"
        android:layout_width="244dp"
        android:layout_height="19dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:text="FirstNumber"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProblemIndicator"
        android:layout_width="195dp"
        android:layout_height="19dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="19dp"
        android:text="ProblemIndicator"
        app:layout_constraintEnd_toStartOf="@+id/FirstNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>